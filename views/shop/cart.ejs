<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= pageTitle %></title>
    <%- include('../includes/links.ejs')%>
  </head>
  <body>
    <div class="container">
      <%- include('../includes/navigation.ejs') %>
      <main>
        <% if (products.length > 0 ){ %>
        <div class="row">
          <ul>
            <% products.forEach( product => { %>
            <li
              class="d-flex mx-auto justify-content-between align-items-center w-50 text-center"
            >
              <p><%=product.productId.title%>(<%= product.quantity%>)</p>
              <p><%= +product.productId.price * +product.quantity %></p>
              <form action="/cart-delete-item" method="post">
                <input
                  type="hidden"
                  value="<%= product.productId._id %>"
                  name="productId"
                />
                <input
                  type="hidden"
                  value="<%= product.productId.price %>"
                  name="productPrice"
                />
                <button class="btn btn-outline-primary" type="submit">
                  Delete Item
                </button>
              </form>
            </li>
            <% }) %>
          </ul>
        </div>
        <a class="btn btn-outline-primary d-block mx-auto my-3 w-25" href="/#"
          >Order Now!</a
        >

        <% } else{ %>
        <h5 class="text-center">There Are No Products in the Cart</h5>

        <% } %>
      </main>
      <%- include('../includes/footer.ejs') %>
    </div>
    <%- include('../includes/scripts.ejs') %>
  </body>
</html>
