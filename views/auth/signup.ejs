<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= pageTitle %></title>
    <%- include('../includes/links.ejs')%>
  </head>
  <body>
    <div class="container">
      <%- include('../includes/navigation.ejs') %>
      <main>
        <% if( errorMessage){ %>
        <h3 class="text-center text-danger"><%= errorMessage %></h3>
        <% } %>
        <form action="/signup" method="POST" novalidate>
          <div class="w-50 mx-auto mb-3">
            <label for="email" class="form-label">Email</label>
            <input
              class="form-control <%= validationArray.findIndex(e => e.path === 'email') > -1 ? 'is-invalid' : null %>"
              type="email"
              name="email"
              id="email"
              value="<%= oldInput.email %>"
            />
          </div>
          <div class="w-50 mx-auto mb-3">
            <label for="password" class="form-label">Password</label>
            <input
              class="form-control <%= validationArray.findIndex(e => e.path === 'password') > -1 ? 'is-invalid' : null %>"
              type="password"
              name="password"
              id="password"
              value="<%= oldInput?.password %>"
            />
          </div>
          <div class="w-50 mx-auto mb-3">
            <label for="passwordConfirm" class="form-label"
              >Confirm Password</label
            >
            <input
              class="form-control <%= validationArray.findIndex(e => e.path === 'passwordConfirm') > -1 ? 'is-invalid' : null %>"
              type="password"
              name="passwordConfirm"
              id="passwordConfirm"
              value="<%= oldInput?.passwordConfirm %>"
            />
          </div>

          <button type="submit" class="btn btn-outline-primary d-block mx-auto">
            SingUp
          </button>
        </form>
      </main>

      <%- include('../includes/footer.ejs') %>
    </div>
    <%- include('../includes/scripts.ejs') %>
  </body>
</html>
