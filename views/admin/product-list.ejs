<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= pageTitle %></title>
    <%- include('../includes/links.ejs')%>
  </head>
  <body>
    <div class="container">
      <%- include('../includes/navigation.ejs') %>

      <main>
        <h1 class="text-center my-3">My Products</h1>
        <% if( products.length > 0) { %>
        <div class="row justify-content-center">
          <% for( let product of products ){ %>
          <div class="card col-xs-12 col-sm-6 col-md-4 mx-3">
            <img
              src="/<%= product.image %>"
              alt="product image"
              class="card-img-top"
            />
            <div class="card-body text-center">
              <h2><%= product.title %></h2>
              <p><%= product.description %></p>
              <h4><%= product.price %>$</h4>
            </div>

            <a
              class="btn btn-outline-primary"
              href="/admin/edit-product/<%= product._id %>?edit=true"
              >Edit</a
            >

            <form action="/admin/delete-product" method="POST">
              <input
                type="hidden"
                value="<%= product._id %>"
                name="productId"
              />

              <button
                class="btn btn-outline-primary w-100 deleteProduct"
                type="button"
              >
                Delete
              </button>
            </form>
          </div>
          <% } %>
        </div>
        <% } else{ %>
        <h4 class="text-center">There Are No Products Yet</h4>
        <% } %>
      </main>
      <%- include('../includes/footer.ejs') %>
    </div>
    <%- include('../includes/scripts.ejs') %>
  </body>
</html>
